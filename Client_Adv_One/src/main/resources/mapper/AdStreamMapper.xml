<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yunting.adv.mapper.Adv.AdStreamMapper">
    <resultMap id="BaseResultMap" type="com.yunting.adv.entity.Adv.AdStream">
        <id column="ad_stream_id" jdbcType="BIGINT" property="adStreamId"/>
        <result column="adv_type_id" jdbcType="CHAR" property="advTypeId"/>
        <result column="player_id" jdbcType="BIGINT" property="playerId"/>
        <result column="app_id" jdbcType="VARCHAR" property="appId"/>
        <result column="code_bit_id" jdbcType="VARCHAR" property="codeBitId"/>
        <result column="request_id" jdbcType="VARCHAR" property="requestId"/>
        <result column="adv_ecpm" jdbcType="DOUBLE" property="advEcpm"/>
        <result column="clicks" jdbcType="INTEGER" property="clicks"/>
        <result column="ip" jdbcType="INTEGER" property="ip"/>
        <result column="first_click_time" jdbcType="TIMESTAMP" property="firstClickTime"/>
        <result column="request_time" jdbcType="TIMESTAMP" property="requestTime"/>
        <result column="wx_nick_name" jdbcType="VARCHAR" property="wxNickName"/>
        <result column="errinfo" jdbcType="VARCHAR" property="errinfo"/>
    </resultMap>

    <insert id="insertAdStream">
        insert into ${dbName}.ad_stream (ad_stream_id, adv_type_id, player_id, app_id, code_bit_id, request_id,
        adv_ecpm,
        clicks, ip, request_time, wx_nick_name,
        errinfo)
        values (#{adStreamId}, #{advTypeId}, #{playerId}, #{appId}, #{codeBitId}, #{requestId}, #{advEcpm},
        #{clicks}, inet_aton(#{ip}), #{requestTime},
        #{wxNickName},#{errinfo})
        <selectKey resultType="long" keyProperty="adStreamId" order="AFTER" keyColumn="ad_stream_id">
            select @@identity;
        </selectKey>
    </insert>

    <update id="changeAdStreamRecord">
        update ${dbName}.ad_stream
        set clicks= #{changeData.clicks}
        where ad_stream_id = #{targetAdv}
    </update>

    <update id="streamFirstClickTime">
        update ${dbName}.ad_stream
        set first_click_time = #{firstClickTime}
        where ad_stream_id = #{advId}
    </update>

    <select id="showAdStreamRecordlist" resultType="com.yunting.adv.entity.Adv.AdStream">
        select ad_stream_id,
               adv_type_id,
               player_id,
               app_id,
               code_bit_id,
               request_id,
               adv_ecpm,
               clicks,
               inet_ntoa(ip) as ip,
               first_click_time,
               request_time,
               wx_nick_name,
               errinfo
        from ${dbName}.ad_stream
        where adv_type_id = #{advType}
        order by ad_stream_id desc
    </select>

    <select id="getAdStreamRecordsByCodeId" resultType="com.yunting.adv.entity.Adv.AdStream">
        select ad_stream_id,
               adv_type_id,
               player_id,
               app_id,
               code_bit_id,
               request_id,
               adv_ecpm,
               clicks,
               inet_ntoa(ip) as ip,
               first_click_time,
               request_time,
               wx_nick_name,
               errinfo
        from ${dbName}.ad_stream
        where code_bit_id = #{codeId}
    </select>


</mapper>