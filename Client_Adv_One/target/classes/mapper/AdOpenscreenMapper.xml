<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yunting.adv.mapper.Adv.AdOpenscreenMapper">
    <resultMap id="BaseResultMap" type="com.yunting.adv.entity.Adv.AdOpenscreen">
        <id column="ad_openScreen_id" jdbcType="BIGINT" property="adOpenscreenId"/>
        <result column="adv_type_id" jdbcType="CHAR" property="advTypeId"/>
        <result column="player_id" jdbcType="BIGINT" property="playerId"/>
        <result column="app_id" jdbcType="VARCHAR" property="appId"/>
        <result column="code_bit_id" jdbcType="VARCHAR" property="codeBitId"/>
        <result column="request_id" jdbcType="VARCHAR" property="requestId"/>
        <result column="adv_ecpm" jdbcType="DOUBLE" property="advEcpm"/>
        <result column="clicks" jdbcType="INTEGER" property="clicks"/>
        <result column="ip" jdbcType="INTEGER" property="ip"/>
        <result column="first_click_time" jdbcType="TIMESTAMP" property="firstClickTime"/>
        <result column="request_time" jdbcType="TIMESTAMP" property="requestTime"/>
        <result column="wx_nick_name" jdbcType="VARCHAR" property="wxNickName"/>
        <result column="errinfo" jdbcType="VARCHAR" property="errinfo"/>
    </resultMap>
    <insert id="insertOpenscreen">
        insert into ${dbName}.ad_openscreen (ad_openScreen_id, adv_type_id, player_id, app_id, code_bit_id, request_id,
        adv_ecpm, clicks, ip, request_time,
        wx_nick_name, errinfo)
        values (#{adOpenscreenId}, #{advTypeId}, #{playerId}, #{appId},
        #{codeBitId}, #{requestId}, #{advEcpm},
        #{clicks}, inet_aton(#{ip}), #{requestTime},
        #{wxNickName}, #{errinfo})
        <selectKey resultType="long" keyProperty="adOpenscreenId" order="AFTER" keyColumn="ad_openScreen_id">
            select @@identity;
        </selectKey>
    </insert>

    <update id="changeAdOpenRecord">
        update ${dbName}.ad_openscreen
        set clicks= #{changeData.clicks}
        where ad_openScreen_id = #{targetAdv}
    </update>

    <update id="openScreenFirstClickTime">
        update ${dbName}.ad_openscreen
        set first_click_time = #{firstClickTime},
            clicks= 1
        where ad_openScreen_id = #{advId}
    </update>

</mapper>